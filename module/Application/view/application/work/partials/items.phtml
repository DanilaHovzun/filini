<?php
/** @var ArrayCollection $categories */
$categories = $this->categories;
/** @var Core\Entity\OurWorkCategory $curentCategory */
$curentCategory = $this->curentCategory;
?>
<?php if ($curentCategory): ?>
    <?php echo $this->partial('application/work/partials/item', ['category' => $curentCategory]); ?>
<?php else : // show all categories with products?>
    <?php foreach ($categories as $category): ?>
        <?php if ($category->getOurWorks()->count() > 0): ?>
            <?php echo $this->partial('application/work/partials/item', ['category' => $category]); ?>
        <?php endif; ?>
    <?php endforeach; ?>
<?php endif; ?>